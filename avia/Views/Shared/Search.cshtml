@model avia.Models.TicketSearchViewModel

<h2>Ticket Search</h2>

<form method="post" asp-action="Search">
    <div class="form-group">
        <label for="airlineId">Airline</label>
        <select id="airlineId" class="form-control" asp-for="AirlineID">
            <option value="">All</option>
            @foreach (var airline in Model.Airlines)
            {
                <option value="@airline.AirlinesID">@airline.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="departureCityId">Departure City</label>
        <select id="departureCityId" class="form-control" asp-for="DepartureCityID">
            <option value="">All</option>
            @foreach (var city in Model.Cities)
            {
                <option value="@city.DestinationsID">@city.CityName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="arrivalCityId">Arrival City</label>
        <select id="arrivalCityId" class="form-control" asp-for="ArrivalCityID">
            <option value="">All</option>
            @foreach (var city in Model.Cities)
            {
                <option value="@city.DestinationsID">@city.CityName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="startDate">Start Date</label>
        <input id="startDate" type="date" class="form-control" asp-for="StartDate" />
    </div>
    <div class="form-group">
        <label for="endDate">End Date</label>
        <input id="endDate" type="date" class="form-control" asp-for="EndDate" />
    </div>
    <div class="form-group form-check">
        <input id="sortByPrice" type="checkbox" class="form-check-input" asp-for="SortByPrice" />
        <label class="form-check-label" for="sortByPrice">Sort By Price</label>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
