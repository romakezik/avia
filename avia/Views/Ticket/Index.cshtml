@model avia.Models.TicketSearchViewModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Avia Search</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>Avia Search</h1>
        <form asp-action="Search" method="post">
            <div class="form-group">
                <label>Airline</label>
                <select asp-for="AirlineID" class="form-control" asp-items="@(new SelectList(Model.Airlines, "AirlineID", "Name"))">
                    <option value="">All Airlines</option>
                </select>
            </div>
            <div class="form-group">
                <label>Departure City</label>
                <select asp-for="DepartureCityID" class="form-control" asp-items="@(new SelectList(Model.Cities, "DestinationsID", "CityName"))">
                    <option value="">All Cities</option>
                </select>
            </div>
            <div class="form-group">
                <label>Arrival City</label>
                <select asp-for="ArrivalCityID" class="form-control" asp-items="@(new SelectList(Model.Cities, "DestinationsID", "CityName"))">
                    <option value="">All Cities</option>
                </select>
            </div>
            <div class="form-group">
                <label>Departure Date</label>
                <input asp-for="StartDate" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label>Return Date</label>
                <input asp-for="EndDate" class="form-control" type="date" />
            </div>
            <div class="form-group form-check">
                <input asp-for="SortByPrice" class="form-check-input" type="checkbox" />
                <label class="form-check-label">Sort by price</label>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
